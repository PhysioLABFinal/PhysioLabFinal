<Page x:Class="PhysioProject2.Clients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhysioProject2"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="Clients"
      Background="Beige">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,-146,-79">
        <Label x:Name="label" Content="ΠΕΛΑΤΕΣ" FontSize="40" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top"/>
        <Button x:Name="addClient" Content="Προσθήκη Πελάτη" HorizontalAlignment="Left" Margin="12,91,0,0" VerticalAlignment="Top" FontSize="16" Click="addclieck"/>
        <TextBox x:Name="SearchTxt" HorizontalAlignment="Left" Height="28" Margin="202,91,0,0" TextWrapping="Wrap"  Text="Αναζήτηση..." VerticalAlignment="Top" FontSize="16" FontStyle="Italic" FontWeight="Light" GotFocus="SearchTxt_GotFocus" Width="151"/>
        <DataGrid x:Name="ClientdataGrid" HorizontalAlignment="Left" Height="Auto" Margin="22,136,0,0" FontSize="16" VerticalAlignment="Top" Width="Auto" Background="WhiteSmoke" IsReadOnly="True" CanUserSortColumns="True" AlternatingRowBackground="White" AlternationCount="2" MouseDoubleClick="ClientdataGrid_MouseDoubleClick"/>
    </Grid>
</Page>
