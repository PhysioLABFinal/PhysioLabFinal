<Window x:Class="PhysioLab.Products.PopUpProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhysioLab.Products"
        mc:Ignorable="d"
        Title="PopUpProducts" Height="auto" Width="auto">
    <Grid>
        <Label x:Name="productNameLbl" Content="Όνομα" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Height="35" Width="153" FontSize="14"/>
        <TextBox x:Name="productNameTxt" HorizontalAlignment="Left" Height="23" Margin="185,37,-13,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <Label x:Name="productCompanyLbl" Content="Εταιρεία" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" Height="30" Width="153" FontSize="14"/>
        <TextBox x:Name="productCompanyTxt" HorizontalAlignment="Left" Height="23" Margin="185,82,-13,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <Label x:Name="productPhoneLbl" Content="Τηλέφωνο Παραγγελιών" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top" Height="30" Width="172" FontSize="14"/>
        <TextBox x:Name="productPhoneTxt" HorizontalAlignment="Left" Height="23" Margin="185,125,-13,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <Label x:Name="productPriceLbl" Content="Τιμή ανα τεμάχιο" HorizontalAlignment="Left" Margin="10,158,0,0" VerticalAlignment="Top" Height="31" Width="153" FontSize="14"/>
        <TextBox x:Name="productPriceTxt" HorizontalAlignment="Left" Height="23" Margin="185,166,-13,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <Button x:Name="savebutton" Content="Αποθηκευση" HorizontalAlignment="Left" Margin="230,217,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
